			$o = new stdClass();
			$o->pick_school_name = $school_name;
			$o->objtype = $objtype;
			$o->objid = $objid;
			$o->week = $form_state['week'];
			$o->season = $pickem->season;
			$o->correct = NULL;
			$_SESSION['picks'][$user->uid]['new'][$objid] = $o;
		}
	}
	else {
		$_SESSION['picks'][$user->uid][$pkid]->pick_school_name = $school_name;
	}
	*/
		
	foreach(element_children($form['events'][$objid]['slate_event']['pick_school_name']) as $sname) {
